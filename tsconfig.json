{
  "compilerOptions": {
    "noImplicitAny": false,
    "baseUrl": "./src",
    "paths": {
      "@isomorphic/*": ["./utils/isomorphic/*"]
    },
    "target": "ESNext",
    "moduleResolution": "node",
    "typeRoots": ["src/types", "./node_modules/@types"],
    "types": ["global"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true 
  }
}